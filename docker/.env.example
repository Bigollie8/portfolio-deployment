# =============================================================================
# Portfolio Docker Compose Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Domain Configuration
DOMAIN=yourdomain.com

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=your-photos-bucket-name

# Database Configuration
POSTGRES_USER=portfolio
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=portfolio

# Security Keys
JWT_SECRET=your-jwt-secret-key-min-32-chars-here
APP_SECRET_KEY=your-app-secret-key-min-32-chars-here

# OpenAI API Key (for RapidPhotoFlow AI tagging)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Discord webhook for shipping notifications
DISCORD_WEBHOOK_URL=

# Optional: Email configuration for shipping notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
